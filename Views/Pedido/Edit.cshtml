@model Api_Oficina.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PedidoId" />
            <div class="form-group">
                <label asp-for="CadastrovendedorId" class="control-label"></label>
                <select asp-for="CadastrovendedorId" class="form-control" asp-items="ViewBag.CadastrovendedorId"></select>
                <span asp-validation-for="CadastrovendedorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dadosdopedido" class="control-label"></label>
                <input asp-for="Dadosdopedido" class="form-control" />
                <span asp-validation-for="Dadosdopedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datadopedido" class="control-label"></label>
                <input asp-for="Datadopedido" class="form-control" />
                <span asp-validation-for="Datadopedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
