@model IEnumerable<Api_Oficina.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}


<h1>Pedidos</h1>

<p>
    <a asp-action="Create" class="btn alert-success">Adicionar um Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cadastrovendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dadosdopedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datadopedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cadastrovendedor.CadastrovendedorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dadosdopedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datadopedido)
            </td>
            <td>
                    <a class="btn-outline-info" asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> |
                    <a class="btn-outline-info" asp-action="Details" asp-route-id="@item.PedidoId">Detalhes</a> |
                    <a class="btn-outline-info" asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
