@model Api_Oficina.Models.Pedido

@{
    ViewData["Title"] = "Delete";
}
<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Pedidos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cadastrovendedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cadastrovendedor.CadastrovendedorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dadosdopedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dadosdopedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datadopedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datadopedido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PedidoId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn-primary">Voltar</a>
    </form>
</div>
