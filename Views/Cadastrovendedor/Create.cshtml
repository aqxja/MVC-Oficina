@model Api_Oficina.Models.Cadastrovendedor

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Cadastrar vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nomevendedor" class="control-label"></label>
                <input asp-for="Nomevendedor" class="form-control" />
                <span asp-validation-for="Nomevendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpfvendedor" class="control-label"></label>
                <input asp-for="Cpfvendedor" class="form-control" />
                <span asp-validation-for="Cpfvendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emailvendedor" class="control-label"></label>
                <input asp-for="Emailvendedor" class="form-control" />
                <span asp-validation-for="Emailvendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datanascimentovendedor" class="control-label"></label>
                <input asp-for="Datanascimentovendedor" class="form-control" />
                <span asp-validation-for="Datanascimentovendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
